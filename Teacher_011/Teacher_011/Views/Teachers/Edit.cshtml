@model Teacher_011.ViewModel.TeacherEditModel
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-10">
        @using (Html.BeginForm("Edit", "Teachers", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(x => x.TeacherId)
            <h3 class="mb-2">Add new Teacher</h3>
            @Html.Partial("_TeacherEditPartial", Model)

            <div class="col-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>InstitudeName</th>
                            <th>SubjcetTopic</th>
                            <th>CourseDuration(Hours)</th>
                            <th>TeachingAbility</th>
                            <th>
                                <button type="submit" class="btn btn-secondary btn-sm" name="act" value="add" formnovalidate>Add</button>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Model.TeacherLogs.Count; i++)
                        {
                            @Html.HiddenFor(x => Model.TeacherLogs[i].TeacherLogId)
                            <tr>
                                <td>
                                    @Html.TextBoxFor(x => Model.TeacherLogs[i].InstitudeName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => Model.TeacherLogs[i].InstitudeName, "", new { @class = "text-danger" })

                                </td>
                                <td>
                                    @Html.TextBoxFor(x => Model.TeacherLogs[i].SubjcetTopic, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => Model.TeacherLogs[i].SubjcetTopic, "", new { @class = "text-danger" })
                                </td>
                                <td>
                                    @Html.TextBoxFor(x => Model.TeacherLogs[i].CourseDuration, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => Model.TeacherLogs[i].CourseDuration, "", new { @class = "text-danger" })
                                </td>
                                <td>
                                    @Html.TextBoxFor(x => Model.TeacherLogs[i].TeachingAbility, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => Model.TeacherLogs[i].TeachingAbility, "", new { @class = "text-danger" })
                                </td>
                                <th>
                                    <button type="submit" class="btn btn-secondary btn-sm" name="act" value="remove_@Model.TeacherLogs[i].TeacherLogId" formnovalidate>Remove</button>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <div class="form-group row mb-1">

                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary" name="act" value="update">Save to database</button>
                </div>
            </div>
        }
    </div>
    <div class="col-2">

        <img src="~/Pictures/@ViewBag.CurrentPic" class="img-thumbnail" style="width:120px" />

    </div>
</div>
@section styles
{
    <link href="~/Content/bootstrap-datepicker.standalone.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}
@section scripts {
    <script src="~/Scripts/jquery-3.7.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
        $(() => {
            $("#BirthDate").datepicker({
                format: "yyyy-mm-dd"
            });
            $("#BirthDate").val(formatDate($("#BirthDate").val()));


        });
        function formatDate(dt) {
            console.log(dt);
            var d = new Date(dt);
            var date = [
                d.getFullYear(),
                ('0' + (d.getMonth() + 1)).slice(-2),
                ('0' + d.getDate()).slice(-2)
            ].join('-');
            return date;
        }
    </script>
}


